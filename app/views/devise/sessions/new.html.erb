<section class='login_form'>

<div class='login_header'> 
  <div>
    <%= link_to 'Back', '/' %>
  </div>
  <h2>LOGIN</h2>
  <div>  
    <%= link_to "Log in", new_session_path(resource_name), class: 'login' %><br />   
  </div>
</div>
<br>


<%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{ class: 'login_container' }) do |f| %>
  <div class="field">
    <%= f.label :email, style: 'display:none' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'login_filed', placeholder: 'Email' %>
  </div>

  <hr>

  <div class="field">
    <%= f.label :password, style: 'display:none' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'login_filed',placeholder: 'Password' %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
<% end %>

<div class="actions">
  <%= f.submit "Log in" %>
</div>
<% end %>

<%= render "devise/shared/links" %>

</section>