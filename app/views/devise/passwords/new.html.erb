<section class='login_form'>
<h2 class='login_header'>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, style: 'display:none' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class:'login_filed' %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:'login_filed' %>
  </div> <br>
<% end %>

<%= render "devise/shared/links" %>

</section>