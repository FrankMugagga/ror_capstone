<section class='logged_in_user_form'>

<nav class='navbar'>
    <div>
    <%= link_to 'Back', categories_path %>
    </div>

    <h1>NEW CATEGORY</h1>

    <div>Search</div>
  </nav>

  <%= form_with model: @category, url: categories_create_path, method: :post, local: true, class:'form' do |f| %>
    <%= f.label :name, style: 'display:none' %>
    <%= f.text_field :name, required: true, placeholder:'Name', class:'login_filed' %>
    <hr>
    <br>

    <%= f.label :icon, style: 'display:none' %>
    <%= f.text_field :icon, required: true, placeholder:'Icon/image', class:'login_filed' %>
    <hr>
    <br>
    <%= f.hidden_field :author_id, value: @user.id %>
    <%= f.submit 'Create Category', class:'login_filed' %>
  <% end %> 

</section>

<% if flash[:notice] %>
  <div>
   <%= flash[:notice] %>
  </div>
<% end %>
